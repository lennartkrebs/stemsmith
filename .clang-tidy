Checks: >
  -*,
  bugprone-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  readability-*,
  portability-*,
  misc-*,
  hicpp-*,
  # enable this if you want naming checks, but configure it first:
  # readability-identifier-naming

WarningsAsErrors: >
  bugprone-*,
  clang-analyzer-*,
  performance-*,
  modernize-use-nullptr

HeaderFilterRegex: '.*'
AnalyzeTemporaryDtors: true
FormatStyle: file

CheckOptions:
  # Use your .clang-format for applying fixes
  - key: FormatStyle
    value: file

  # --- modernize-* tweaks ---
  - key: modernize-use-auto.MinTypeNameLength
    value: '10'
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'

  # --- readability-* tweaks ---
  - key: readability-function-cognitive-complexity.Threshold
    value: '30'

  # Uncomment and configure this block if you want snake_case enforced:
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.FunctionCase
    value: lower_case
  - key: readability-identifier-naming.ClassCase
    value: lower_case
